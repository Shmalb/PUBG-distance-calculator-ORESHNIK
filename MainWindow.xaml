<Window x:Class="PubgDistanceCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PUBG Distance Calculator" Height="250" Width="400">
    <StackPanel Margin="20">
        <Button Name="btnSetReference" Content="Set Reference Points (100m)" Click="btnSetReference_Click" Margin="0,0,0,10"/>
        <Button Name="btnMeasure" Content="Measure Distance" Click="btnMeasure_Click" Margin="0,0,0,10"/>
        <TextBlock Name="txtResult" FontSize="16" Margin="0,10,0,0"/>
    </StackPanel>
</Window>