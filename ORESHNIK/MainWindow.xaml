<Window x:Class="ORESHNIK.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ORESHNIK"
        mc:Ignorable="d"
        Title="PUBG Distance Calculator" Height="550" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Border Background="#E0000000" CornerRadius="10" BorderBrush="#FFFF6B35" BorderThickness="2">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>              
            </Grid.RowDefinitions>

            <!-- Заголовок с кнопками -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="🎯 PUBG Distance Calculator" 
                           FontSize="16" FontWeight="Bold" 
                           Foreground="#FFFF6B35" VerticalAlignment="Center"/>
                
                <Button Grid.Column="1" Content="─" Width="25" Height="25" Margin="5,0"
                        Background="#FF666666" Foreground="White" 
                        BorderThickness="0" Cursor="Hand" FontSize="14"
                        Click="BtnMinimize_Click" ToolTip="Свернуть"/>

                <Button Grid.Column="2" Content="✕" Width="25" Height="25"
                        Background="#FFCC0000" Foreground="White" 
                        BorderThickness="0" Cursor="Hand" FontSize="14"
                        Click="BtnClose_Click" ToolTip="Закрыть"/>
            </Grid>

            <!-- Калибровка -->
            <Border Grid.Row="1" Background="#FF252525" CornerRadius="5" Padding="8" Margin="0,10,0,0">
                <StackPanel>
                    <TextBlock Text="Калибровка (100м):" 
                               Foreground="White" FontSize="11" FontWeight="Bold" Margin="0,0,0,5"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBox x:Name="txtCalibrationPx" 
                                     Width="80" Height="26"
                                     Background="#FF1A1A1A" Foreground="White"
                                     BorderBrush="#FF404040" BorderThickness="1"
                                     VerticalContentAlignment="Center"
                                     Padding="5,0"
                                     FontSize="12"
                                     Text="0"/>
                            <TextBlock Text="px = 100м" 
                                       Foreground="#FF888888" FontSize="11"
                                       VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>

                        <Button Grid.Column="1" x:Name="btnApplyCalibration" 
                                Content="Применить" 
                                Width="80" Height="26" Margin="5,0"
                                Background="#FF00AA00" Foreground="White" 
                                BorderThickness="0" Cursor="Hand" FontSize="10"
                                Click="BtnApplyCalibration_Click"/>

                        <Button Grid.Column="2" x:Name="btnCalibration" 
                                Content="Ручная калибровка" 
                                Width="110" Height="26"
                                Background="#FF0078D7" Foreground="White" 
                                BorderThickness="0" Cursor="Hand" FontSize="9"
                                Click="BtnCalibration_Click"/>
                    </Grid>

                    <TextBlock x:Name="txtCalibrationStatus" 
                               Text="❌ Калибровка не выполнена" 
                               Foreground="#FFFF4444" FontSize="10" 
                               Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <!-- Кнопка очистки -->
            <Button Grid.Row="2" x:Name="btnClear" Content="🗑 Очистить линии" 
                    Height="28" Margin="0,8,0,0"
                    Background="#FF666666" Foreground="White" 
                    BorderThickness="0" Cursor="Hand" FontSize="11"
                    Click="BtnClear_Click"/>

            <!-- Результат -->
            <Border Grid.Row="3" Background="#FF1A1A1A" CornerRadius="5" Padding="8" Margin="0,8,0,0">
                <StackPanel>
                    <TextBlock x:Name="txtResult" 
                               Text="Расстояние: --- м" 
                               FontSize="18" FontWeight="Bold" 
                               Foreground="#FF00FF00"
                               HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtInstruction" 
                               Text="Введите пиксели или нажмите 'Ручная калибровка'" 
                               Foreground="#FFFFCC00" FontSize="10" 
                               TextWrapping="Wrap" Margin="0,5,0,0"
                               HorizontalAlignment="Center" TextAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Настройки горячих клавиш -->
            <Border Grid.Row="4" Background="#FF1E1E1E" CornerRadius="5" Padding="8" Margin="0,8,0,0">
                <StackPanel>
                    <TextBlock Text="⚙ Горячие клавиши:" 
                               Foreground="#FFFF6B35" FontSize="11" FontWeight="Bold" Margin="0,0,0,5"/>

                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="85"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Измерение:" 
                                   Foreground="White" FontSize="10" 
                                   VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtMeasureKey" 
                                 Height="24" Background="#FF1A1A1A" Foreground="White"
                                 BorderBrush="#FF404040" BorderThickness="1"
                                 VerticalContentAlignment="Center" Padding="5,0"
                                 FontSize="11" Text="F9" IsReadOnly="True"
                                 PreviewKeyDown="TxtMeasureKey_PreviewKeyDown"/>
                        <Button Grid.Row="0" Grid.Column="2" Content="Изменить" 
                                Width="70" Height="24" Margin="5,0,0,0"
                                Background="#FF0078D7" Foreground="White" 
                                BorderThickness="0" Cursor="Hand" FontSize="9"
                                Click="BtnChangeMeasureKey_Click"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Очистить:" 
                                   Foreground="White" FontSize="10" 
                                   VerticalAlignment="Center" Margin="0,5,0,0"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtClearKey" 
                                 Height="24" Background="#FF1A1A1A" Foreground="White"
                                 BorderBrush="#FF404040" BorderThickness="1"
                                 VerticalContentAlignment="Center" Padding="5,0"
                                 FontSize="11" Text="F10" IsReadOnly="True" Margin="0,5,0,0"
                                 PreviewKeyDown="TxtClearKey_PreviewKeyDown"/>
                        <Button Grid.Row="1" Grid.Column="2" Content="Изменить" 
                                Width="70" Height="24" Margin="5,5,0,0"
                                Background="#FF0078D7" Foreground="White" 
                                BorderThickness="0" Cursor="Hand" FontSize="9"
                                Click="BtnChangeClearKey_Click"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Калибровка:" 
                                   Foreground="White" FontSize="10" 
                                   VerticalAlignment="Center" Margin="0,5,0,0"/>
                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtCalibrationKey" 
                                 Height="24" Background="#FF1A1A1A" Foreground="White"
                                 BorderBrush="#FF404040" BorderThickness="1"
                                 VerticalContentAlignment="Center" Padding="5,0"
                                 FontSize="11" Text="F8" IsReadOnly="True" Margin="0,5,0,0"
                                 PreviewKeyDown="TxtCalibrationKey_PreviewKeyDown"/>
                        <Button Grid.Row="2" Grid.Column="2" Content="Изменить" 
                                Width="70" Height="24" Margin="5,5,0,0"
                                Background="#FF0078D7" Foreground="White" 
                                BorderThickness="0" Cursor="Hand" FontSize="9"
                                Click="BtnChangeCalibrationKey_Click"/>
                    </Grid>

                    <Button x:Name="btnSaveSettings" Content="💾 Сохранить настройки" 
                            Height="26" Margin="0,8,0,0"
                            Background="#FF00AA00" Foreground="White" 
                            BorderThickness="0" Cursor="Hand" FontSize="10"
                            Click="BtnSaveSettings_Click"/>
                </StackPanel>
            </Border>

            <!-- Эмблема внизу -->
            <Image Grid.Row="5" 
       Source="emblem.png" 
       Width="140" Height="140" 
       Margin="0,8,0,0"
       HorizontalAlignment="Center"
       Stretch="Uniform"
       x:Name="imgEmblem"/>
        </Grid>
    </Border>
</Window>